#include "monty.h"

void open_file(char *file)
{
	FILE *fptr;
	char *input = malloc(sizeof(char) * BUFF_SIZE);
	char *tmp = NULL;
	int read, len;

	len = 0;
	if ((fptr = fopen(file, "r")) == NULL)
	{
		dprintf(2, "Error: Can't open file %s\n", file);
		exit(EXIT_FAILURE);
	}

	while ((read = getline(&tmp, &len, fptr)) != - 1)
	{
		while (*tmp != '\0')
		{
			input[i] = *tmp;
			i++;
			tmp++;
		}

		if (tmp)
			free(tmp);
		input[i] = ' ';
		i++;
	}
	input[i] = '\0';

	seperate_string(input);

}
